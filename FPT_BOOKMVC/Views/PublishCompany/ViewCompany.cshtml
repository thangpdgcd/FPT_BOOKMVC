@model FPT_BOOKMVC.ModelsCRUD.PushlishCompany.UpdateCompany
@{
    Layout = "_Layout2";
}

<h1>Edit Publish Company Example</h1>
<form method="post" action="ViewCompany">
    <div class="mb-3">
        <label for="CompanyId" class="form-label">Company Id:</label>
        <input type="text" class="form-control" id="CompanyId" asp-for="PublishingCompanyId" readonly>
    </div>
    <div class="mb-3">
        <label for="CompanyName" class="form-label">Company Name:</label>
        <input type="text" class="form-control" id="CompanyName" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="CompanyAddressExample" class="form-label">Company Address:</label>
        <input type="text" class="form-control" id="CompanyAddressExample" asp-for="Adress">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <button type="submit" class="btn btn-danger" asp-action="DeleteCompany" asp-controller="PublishCompany">Delete</button>
</form>