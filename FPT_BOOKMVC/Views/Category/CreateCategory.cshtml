@model FPT_BOOKMVC.ModelsCRUD.Category.AddCategoryViewModel

@{
    Layout = "_Layout2";
}
<h1>Create Category</h1>
<form method="post" action="CreateCategory">
    <div class="mb-3">
        <label for="CategoryName" class="form-label">Category Name:</label>
        <input type="text" class="form-control" id="CategoryName" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="CategoryDesExample" class="form-label">Category Description:</label>
        <input type="text" class="form-control" id="CategoryDesExample" asp-for="Description">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}