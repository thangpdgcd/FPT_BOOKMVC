<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FPT BOOKS</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FPT_BOOKMVC.styles.css" asp-append-version="true" />
	<link rel="icon" type="image/png" href="Images/R (1)iconsach.png" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/fonts/linearicons-v1.0.0/icon-font.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/slick/slick.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/MagnificPopup/magnific-popup.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/vendor/perfect-scrollbar/perfect-scrollbar.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/css/util.css" asp-append-version="true">
	<link rel="stylesheet" type="text/css" href="~/css/main.css" asp-append-version="true">
</head>
<body class="animsition">
	<header>
		<div class="container-menu-desktop">
			<!-- Topbar -->
			<div class="top-bar">
				<div class="content-topbar flex-sb-m h-full container">
					<div class="left-top-bar">
						WELCOM TO FPT BOOKS
					</div>
				</div>
			</div>

			<div class="wrap-menu-desktop how-shadow1">
				<nav class="limiter-menu-desktop container mb-3">

					<!-- Logo desktop -->
					<a href="#" class="logo">
						<img src="~/Images/logo.png" alt="IMG-LOGO">
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li>
								<a asp-area="UnAuthenticated" asp-controller="Home" asp-action="Index">FPT BOOOKS</a>

							</li>
							<li>
								<a asp-area="UnAuthenticated" asp-controller="Category" asp-action="CategoryIndex">Category</a>
							</li>
						</ul>
					</div>

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
							<i class="zmdi zmdi-search"></i>
						</div>

						<a asp-area="Authenticated" asp-controller="Cart" asp-action="CartIndex" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0">
							<i class="zmdi zmdi-shopping-cart"></i>
						</a>

						@* <a href="#" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0"> *@
						@* 	<i class="zmdi zmdi-favorite-outline"></i> *@
						@* </a> *@
					</div>
					<div class="navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom pl-5">
						<div class="how-shadow1 rounded-pill">
							<div class="navbar-collapse collapse justify-content-between container">
								<partial name="_LoginPartial" />
							</div>
						</div>
					</div>
					<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
						<div class="container-search-header">
							<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
								<img src="~/Images/icons/icon-close2.png" alt="CLOSE">
							</button>

							<form class="wrap-search-header flex-w p-l-15" method="get" asp-area="Authenticated" asp-controller="Book" asp-action="SearchBook">
								<button type="submit" class="flex-c-m trans-04">
									<i class="zmdi zmdi-search"></i>
								</button>
								<input class="plh3" type="text" name="Search" placeholder="Search...">
							</form>
						</div>
					</div>
				</nav>
			</div>
		</div>
	</header>

	<div class="container">
		<main role="main" class="pb-3 p-t-135">
			@RenderBody()
		</main>
	</div>

	<script src="~/vendor/jquery/jquery-3.2.1.min.js" asp-append-version="true"></script>
	<!--===============================================================================================-->
	<script src="~/vendor/animsition/js/animsition.min.js" asp-append-version="true"></script>
	<!--===============================================================================================-->
	<script src="~/vendor/bootstrap/js/popper.js" asp-append-version="true"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
	<!--===============================================================================================-->
	<script src="~/vendor/select2/select2.min.js" asp-append-version="true"></script>
	<script asp-append-version="true">
		$(".js-select2").each(function () {
			$(this).select2({
				minimumResultsForSearch: 20,
				dropdownParent: $(this).next('.dropDownSelect2')
			});
		})
	</script>
	<!--===============================================================================================-->
	<script src="~/js/main.js" asp-append-version="true"></script>
	<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
